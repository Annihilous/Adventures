html {
  background: url(<%= asset_path "background1.jpg" %>);
  background-size: 100%;
}

body {
	background: transparent !important;
}

div {
	padding: 0px, 5px;
	background: transparent;
}

nav {
	color: blue;
	background: red;
}

.image_right {
	float: right;
}

.container {
	background-color: rgba(255, 255, 255, 0.8);
}

.row {
	width: inherit;
	background: rgba(0, 0, 0, 0.2);
	position: center;
}

.big_button {
	background: black;
	color: white;
	font-size: 100px;
}

.color {
	background-color: gray;
}

.main_content {
	margin: 50px;
}

.btn-btn {
	color: yellow;
	background: black;
}

.destination-panel {
	background-color: rgba(0, 0, 0, 0.2);
	margin: 10px;
	padding: 10px;
}

.btn-custom {
  background-color: hsl(233, 100%, 30%) !important;
  background-repeat: repeat-x;
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#0a26ff", endColorstr="#001199");
  background-image: -khtml-gradient(linear, left top, left bottom, from(#0a26ff), to(#001199));
  background-image: -moz-linear-gradient(top, #0a26ff, #001199);
  background-image: -ms-linear-gradient(top, #0a26ff, #001199);
  background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #0a26ff), color-stop(100%, #001199));
  background-image: -webkit-linear-gradient(top, #0a26ff, #001199);
  background-image: -o-linear-gradient(top, #0a26ff, #001199);
  background-image: linear-gradient(#0a26ff, #001199);
  border-color: #001199 #001199 hsl(233, 100%, 24.5%);
  color: #fff !important;
  text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.36);
  -webkit-font-smoothing: antialiased;
}


img {
	/*float:right;*/
	width: 300px;
}

#map-canvas, #destination-map { 
	height: 500px;
	width: 100%;
	margin: 0;
	padding: 0;
}